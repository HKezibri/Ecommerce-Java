<BorderPane prefHeight="670.0" prefWidth="932.0" style="-fx-background-color: #f4f8fb; -fx-font-family: 'Arial';" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.HomePageController">

    <!-- Header with Logo and Navigation -->
    <top>
        <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #0B032F; -fx-padding: 15px;">
         <HBox prefHeight="64.0" prefWidth="523.0">
            <children>
               <Label prefHeight="43.0" prefWidth="262.0" text="SKNN LOGO" textFill="WHITE">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
                  </HBox.margin>
                  <font>
                     <Font name="System Bold" size="29.0" />
                  </font>
               </Label>
            </children>
         </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="64.0" prefWidth="374.0" spacing="20" style="-fx-padding: 0 0 0 20;">
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="See Orders" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="About" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold;" text="Logout" />
                <Button style="-fx-background-color: white; -fx-text-fill: black; -fx-background-radius: 15; -fx-padding: 8px 15px;" text="\@name" />
            </HBox>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="TOP_RIGHT" spacing="20" style="-fx-padding: 30px;" />
    </center>

    <!-- Footer Section -->
    <bottom>
        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="676.0" spacing="20" style="-fx-background-color: #D6CFFF; -fx-padding: 10px;">
            <Label style="-fx-text-fill: black;" text="Contact Us: info@skincareshop.com" />
            <HBox spacing="10" />
        </HBox>
    </bottom>
</BorderPane>
